@media (min-width:768px) and (max-width:991px)


	footer

		.cat-populares
			padding-left 0px
		.nav-categorias
			ul
				li
					width 80%
		.nav-footer
			ul
				li
					width 24%
		.menu-footer
			ul
				text-align center
				li
					padding 10px 10px


		.newsletter
			margin 50px 0 30px 0
			strong
				text-align center
			p
				text-align center

			.section_social
				margin 20px 0 0 0
				width 100%
				display inline-block
				text-align center






@media (max-width:767px)

	footer
		.backg-suscrib
			.text-suscrib
				br
					display none
				span
					font-size 36px
					line-height 39px
				p
					font-size 17px
			.form-inline
				.form-group
					input, button
						float left
		.about_us
			margin 0 0 50px 0
			display inline-block
			width 100%
		.newsletter
			margin 50px 0 30px 0
			strong
				text-align center
			p
				text-align center

			.section_social
				margin 20px 0 0 0
				width 100%
				display inline-block
				text-align center
		.footer_bar_bottom
			height auto

