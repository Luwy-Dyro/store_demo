$color_p = #000
$color_s = #212121
$color_t = #3D3D3D
$color_f = #d7ab9e
$color_b = #797979
$color_int = #000
$color_title = #000
$color_boton_primario = #000
$color_boton_primario_hover = #333
$fonttext = 'Arial'
$fonttext_f1 ='OpenSans-Bold'
$fonttext_f2 ='OpenSans-Semibold'
$fonttext_f3 ='OpenSans'
$font_size_h1 = 25px
$font_size_h2 = 19px

.signin
	display inline-block
	width 100%
	margin 140px 0 120px 0
	.signin_left

		.signin_form
			width auto
			display block
			margin 0 auto
			width 300px
			br
				display none
			strong
				font-size 25px
				width 100%
				font-weight normal
				text-align left
				display block
				margin 0 0 15px 0
				font-family $fonttext_f3
				color $color_title
				text-transform none

			input
				border-radius 0px
				margin 0 0 15px 0
				border 1px solid #cccccc
				padding 4px 10px
				height auto
				background transparent
				width 300px
				text-align left
				display inline-block
			label
				display block
				font-size 14px
				color $color_p
				font-weight normal
				font-family $fonttext_f3


		.form_btn
			display block
			margin 10px auto 10px auto
			width 300px
			.btn_signin
				font-size 15px
				font-family $fonttext_f3
				text-transform none
				padding 5px 10px 5px
				border-radius 0px 0px 0px 0px
				-moz-border-radius 0px 0px 0px 0px
				-webkit-border-radius 0px 0px 0px 0px
				background $color_boton_primario
				width 100%
				&:hover
					background $color_boton_primario_hover
					border-color $color_boton_primario_hover


		.register
			display block
			width 300px
			margin 35px auto 0
			strong
				font-size 25px
				width 100%
				font-weight normal
				text-align left
				display block
				margin 0
				font-family $fonttext_f3
				color $color_title
				text-transform none
			ul
				list-style none
				margin 15px 0 0 0
				padding 0px
				li
					font-size 14px
					font-family $fonttext_f3
					color $color_p
			p
				font-size 17px
				color $color_p
				text-align left
				margin 50px 0 0px 0
				font-family $fonttext_f3
				text-transform none
				br
					display none

			#btnRegister
				font-size 15px
				font-family $fonttext_f3
				text-transform none
				padding 5px 10px 5px
				border-radius 0px 0px 0px 0px
				-moz-border-radius 0px 0px 0px 0px
				-webkit-border-radius 0px 0px 0px 0px
				background $color_b
				width 100%
				&:hover
					background $color_p
					border-color $color_p

	a
		margin 5px 0 0 0
		display block
		color #333





	.text-center
		font-family $fonttext_f3
		font-size 13px
		color $color_p
		a
			color $color_p
			font-family $fonttext_f3

	.signin_right
		width 99%
		border-left 1px solid #ccc
		padding 0 0 150px 30px

		strong
			font-size 25px
			width 100%
			font-weight normal
			text-align left
			display block
			margin 0 0 15px 0
			font-family $fonttext_f3
			color $color_title
			text-transform none
		b
			font-size 20px
			width 100%
			font-weight normal
			text-align left
			display block
			margin 50px 0 20px 0
			font-family $fonttext_f3
			color $color_title
			text-transform none
		input
			border-radius 0px
			margin 0 0 15px 0
			border 1px solid #cccccc
			padding 4px 10px
			height auto
			background transparent
			width 300px
			text-align left
			display inline-block
		label
			display block
			font-size 14px
			color $color_p
			font-weight normal
			font-family $fonttext_f3
		.buy
			width 300px
			margin 0 auto
			.pay_inv
				.guest_button
					font-size 15px
					font-family $fonttext_f3
					text-transform none
					padding 5px 10px 5px
					border-radius 0px 0px 0px 0px
					-moz-border-radius 0px 0px 0px 0px
					-webkit-border-radius 0px 0px 0px 0px
					background $color_boton_primario
					width 100%
					color #fff
					margin 32px 0 0 0
					&:hover
						background $color_boton_primario_hover
						border-color $color_boton_primario_hover

/**MEDIA QUERYS*/
@media (min-width:1367px) and (max-width:1950px)
	.signin
		margin 174px 0 200px 0




@media (min-width:992px) and (max-width:1199px)
	.signin
		.signin_left
			.social_login
				width 100%


@media (min-width:768px) and (max-width:991px)
	.signin
		.signin_left
			.social_login
				.btn-facebook
					margin 0 0 15px 0




@media (max-width:767px)
	.signin
		margin 50px 0 70px
		.signin_left
			.social_login
				.btn-facebook
					margin 0 0 15px 0
			.form-group
				width 100%


		.signin_right
			padding 50px 0 0 10px
			border-top 1px solid #000
			border-left none
			margin 50px 0 0 0
			.register
				strong
					font-size 23px
				ul
					margin 25px 0 0 0px

