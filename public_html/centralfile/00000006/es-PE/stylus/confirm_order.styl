$color_p = #000
$color_s = #212121
$color_t = #3D3D3D
$color_f = #d7ab9e
$color_b = #797979
$color_int = #000
$color_title = #000
$fonttext = 'Arial'
$fonttext_f1 ='OpenSans-Bold'
$fonttext_f2 ='OpenSans-Semibold'
$fonttext_f3 ='OpenSans'
$font_size_h1 = 25px
$font_size_h2 = 19px

#content
	.bredcrumb, .page_breadcrumb, .breadcrumb
		margin-left 10px
		margin-bottom 0px

.review_order
	color #333
	h2
		font-family $fonttext_f3
		text-align left
		border-bottom 0px
		text-transform none
		font-size 22px
		color #000
		line-height 40px
		margin 10px 10px 35px 0px
		padding 0px 0 0px 0
		letter-spacing -1px
		border-bottom 1px solid #ddd

	.info_order
		margin 0 0 20px -10px
		strong
			font-size 30px
			color $color_int
			font-weight normal
			width 100%
			float left
			margin 0px 0 15px 0
			span
				width 80px
				border-bottom 1px solid #ddd
				padding 0 20px 5px 0
				margin 0 0 27px 0
				font-size 16px
				color #000
				font-weight bold
				font-family $fonttext_f3
				text-transform none
				letter-spacing -1px

		p
			margin 0 0 4px 0
			display block
			font-size 14px
			font-family $fonttext_f3





	/* SUMMARY - POSITION RIGHT */
	.summary_review_order
		.form_group
			border-radius  0px
			-moz-border-radius  0px
			-webkit-border-radius  0px
			border none
			background #f7f7f7
			padding 30px 30px
			margin 48px 0 50px 0
			border 1px solid #ddd
			.summ_total
				margin 0px 0 0 0
				display block
				strong
					font-size 15px
					font-family $fonttext_f3
					color $color_int
					text-transform none
					font-weight bold
					margin 10px 0 15px 0
					float left
					text-align center
					width 100%
				p
					font-size 13px
					display inline-block
					width 100%
					span
						font-size 14px
						float left
					b
						float right
						font-size 14px
						font-weight normal
				.item
					border-bottom 1px solid #999
					padding 5px 0
					font-size 16px
					margin-bottom 12px
				.discount
					color $color_s
					b
						color $color_s
				.total
					margin 3px 0 15px 0
					display inline-block
					color $color_int
					font-weight normal
					border-top 1px solid #999
					padding 12px 0 0 0
					font-size 18px
					text-transform none
					span
						font-size 14px
					p
						span
							font-weight normal
					b
						color $color_t
						font-size 15px
				hr
					border-top 1px solid #ccc
					margin-bottom 10px
					margin-top 10px
				#summ_tcamb
					#spnsummtcamb
						float right
						font-weight bold

				#summ_totalpay
					margin 10px 0
					#spnsummtotalpay
						float right
						font-weight bold



			.img_payment_method
				width  100%
				display inline-block
				height  auto
				padding  7px 0 0 0px
				margin  10px 0
				position relative
				text-align center
				p
					font-size 15px
					font-family $fonttext_f3
					color $color_int
					text-transform none
					font-weight bold
					margin 0px 0 15px 0
					text-align center
					width 100%
				img
					/*top auto !important
					left auto !important*/
					margin-top 0px
					display inline-block
			.btn_pay
				color #fff
				/*background-color #000
				border-color #000*/
				font-size 17px
				font-weight normal
				padding 7px 15px 7px 15px
				width 100%
				letter-spacing -1px
				font-weight normal
.resumen_orden
	display none !important


.content_tran_banc
	width 100%
	display inline-block
	margin 0px 0 30px 0
	.tran_banc
		background #f7f7f7
		width 70%
		display block
		border 1px solid #ddd
		margin 10px auto
		padding 30px
		.logo
			width 220px
			height auto
			margin 0 0 20px 0
			img
				width 220px
				height auto
	p
		font-size 15px
	strong
		width 100%
		display inline-block
		margin 20px 0 10px 0
		font-size 15px
	b
		font-size 16px


@media (max-width:767px)

	.review_order
		.info_order
			strong
				span
					display inline-block
					width 100%
					margin 0px
	.content_tran_banc
		.tran_banc
			width 100%